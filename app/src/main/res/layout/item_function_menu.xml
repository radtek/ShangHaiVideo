<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="48dp">
    <ImageView
        android:id="@+id/item_function_icon_iv"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/icon_home_clock_48"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/item_function_label_tv"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_toRightOf="@id/item_function_icon_iv"
        android:layout_centerVertical="true"
        android:textColor="@color/color_number_5"
        android:text="测试功能按钮"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_right_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/div_color"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>